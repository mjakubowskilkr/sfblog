{% extends 'base.html.twig' %}

{% block body %}
	<h1>Symfony Blog based on 2.7.39</h1>
	<hr />
	{%  for post in posts %}
		<div>
			<h2><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></h2>
			<p>{{ post.lead}}</p>
					
		</div>
	{% endfor %}
	<div class="pagination">
        {{ knp_pagination_render(posts) }}
	</div>
	
{% endblock %}