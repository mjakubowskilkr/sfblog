{% extends 'base.html.twig' %}

{% block body %}
	<h1>Symfony Blog based on 2.7.38</h1>
	
	{%  for post in posts %}
		<div>
			<h2>{{ post.title }}</h2>
			<p>{{ post.lead}}}</p>
					
		</div>
	{% endfor %}
	<div class="pagination">
        {{ knp_pagination_render(posts) }}
	</div>
	
{% endblock %}